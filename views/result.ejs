<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Results</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f3f4f6;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold mb-8 text-gray-800 text-center">Election Results</h1>

        <% if (electionResults.length > 0) { %>
            <div class="space-y-12">
                <% electionResults.forEach(result => { %>
                    <div class="bg-white p-8 rounded-lg shadow-lg">
                        <h2 class="text-3xl font-semibold mb-6 text-gray-800"><%= result.election.name %></h2>
                        <p class="text-sm text-gray-600 mb-4">
                            <span class="font-medium">Duration:</span>
                            <%= result.election.startDate.toDateString() %> to <%= result.election.endDate.toDateString() %>
                        </p>
                        <div class="space-y-4">
                            <% result.results.forEach(res => { %>
                                <div class="flex justify-between items-center bg-gray-100 p-4 rounded-lg shadow-md">
                                    <div>
                                        <h3 class="text-2xl font-bold text-indigo-600"><%= res.candidate.name %></h3>
                                        <p class="text-sm text-gray-600"><%= res.candidate.party %></p>
                                    </div>
                                    <div class="text-2xl font-semibold text-gray-800">
                                        <%= res.voteCount %> votes
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-lg text-gray-700">No closed elections available at the moment.</p>
        <% } %>
    </div>
</body>
</html>
