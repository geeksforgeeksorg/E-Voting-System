<div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 bg-indigo-600">
        <h1 class="text-2xl font-bold leading-7 text-white sm:text-3xl sm:truncate">Candidate Details</h1>
    </div>
    <div class="px-4 py-5 sm:p-6">
        <div class="flex flex-col md:flex-row">
            <div class="md:w-1/3 mb-6 md:mb-0">
                <div class="bg-gray-100 p-4 rounded-lg">
                    <div class="mb-4 flex justify-center">
                        <div class="relative h-40 w-40 rounded-full overflow-hidden shadow-lg">
                            <% if (candidate.profileImage) { %>
                                <img src="<%= candidate.profileImage %>" alt="<%= candidate.name %>" class="object-cover w-full h-full">
                            <% } else { %>
                                <div class="flex items-center justify-center w-full h-full bg-gray-300 text-gray-500">
                                    <svg class="h-24 w-24" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                                    </svg>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <h2 class="text-2xl font-bold mb-4 text-indigo-600 text-center"><%= candidate.name %></h2>
                    <p class="text-lg mb-2"><span class="font-semibold text-gray-600">Age:</span> <%= candidate.age %></p>
                    <p class="text-lg mb-2"><span class="font-semibold text-gray-600">Party:</span> <%= candidate.party %></p>
                    <p class="text-lg mb-4"><span class="font-semibold text-gray-600">Biography:</span> <%= candidate.biography %></p>
                    <div class="flex justify-between">
                        <p class="text-lg"><span class="font-semibold text-gray-600">Elections:</span> <%= totalElections %></p>
                        <p class="text-lg"><span class="font-semibold text-gray-600">Total Votes:</span> <%= totalVotes %></p>
                    </div>
                </div>
            </div>
            <div class="md:w-2/3 md:pl-6">
                <h3 class="text-xl font-bold mb-4 text-indigo-600">Elections Participated</h3>
                <% if (electionDetails.length > 0) { %>
                    <div class="bg-white shadow overflow-hidden sm:rounded-md">
                        <ul class="divide-y divide-gray-200">
                            <% electionDetails.forEach(election => { %>
                                <li>
                                    <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                                        <div class="flex items-center justify-between">
                                            <p class="text-lg font-medium text-indigo-600 truncate">
                                                <%= election.name %>
                                            </p>
                                            <div class="ml-2 flex-shrink-0 flex">
                                                <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                    Votes: <%= election.votes %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="mt-2 sm:flex sm:justify-between">
                                            <div class="sm:flex">
                                                <p class="flex items-center text-sm text-gray-500">
                                                    <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                                                    </svg>
                                                    <%= election.startDate.toDateString() %> - <%= election.endDate.toDateString() %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% } else { %>
                    <p class="text-gray-500 bg-gray-50 p-4 rounded-md">No elections participated.</p>
                <% } %>
            </div>
        </div>
    </div>
    <div class="px-4 py-4 sm:px-6 bg-gray-50">
        <a href="/admin/candidates" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Back to Manage Candidates
        </a>
    </div>
</div>