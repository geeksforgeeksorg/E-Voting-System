
 

    <div class="max-w-4xl mx-auto my-8 p-8 bg-white shadow-2xl rounded-lg">
        <h1 class="text-3xl font-bold mb-6 text-indigo-700">Add Candidates to <%= election.name %></h1>

        <div class="mb-8">
            <h2 class="text-2xl font-semibold mb-4 text-gray-700">Current Candidates</h2>
            <% if (election.candidates.length > 0) { %>
                <ul class="space-y-2">
                    <% election.candidates.forEach(candidate => { %>
                        <li class="bg-gray-100 p-3 rounded-md hover:bg-gray-200 transition duration-150 ease-in-out">
                            <a href="/admin/candidates/<%= candidate._id %>" class="text-indigo-600 hover:text-indigo-800"><%= candidate.name %></a>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="text-gray-500 italic">No candidates added to this election yet.</p>
            <% } %>
        </div>

        <div>
            <h2 class="text-2xl font-semibold mb-4 text-gray-700">Add New Candidate</h2>
            <form action="/election/<%= election._id %>/add-candidates" method="POST" class="space-y-4">
                <div>
                    <label for="candidateId" class="block text-sm font-medium text-gray-700 mb-1">Select Candidate</label>
                    <select name="candidateId" id="candidateId" required class="mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                        <option value="">Choose a candidate</option>
                        <% allCandidates.forEach(candidate => { %>
                            <option value="<%= candidate._id %>"><%= candidate.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                        Add Candidate
                    </button>
                </div>
            </form>
        </div>
    </div>
